@model IList<SimpleSurveyWebsite.ViewModels.SurveyQuestion>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Bootstrap/css/bootstrap.css" rel="stylesheet" />
    <title>SurveyStats</title>
</head>
<body>
    <div class="container">
        <fieldset>
            <legend>Survey statistics</legend>
            @foreach (var question in Model)
            {
                <div class="form-group">
                    <label for="">@question.Text</label><br />
                    <ul>
                        @foreach (var answerCount in question.AnswersStats)
                        {
                            <li>@answerCount</li>
                        }
                    </ul>
                </div>
            }
        </fieldset>
        @Html.ActionLink("Return to Survey", "Index")
        <br />
        @Html.ActionLink("Return to Survey and reset statistics", "ResetStats")
    </div>
</body>
</html>
